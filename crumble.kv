<HomeScreen>
    circuit_grid: circuit_grid
    clock_label: clock_label
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            id: circuit_grid
            cols: 4
        BoxLayout:
            size_hint: 1, 0.15
            Label:
                id: clock_label
                text: ''
                font_size: '25sp'
            ToggleButton:
                text: 'Mute All'
            ToggleButton:
                text: 'Deafen All'

<Circuit>
    name_label: name_label
    userlist_layout: userlist_layout
    orientation: 'vertical'
    padding: 5
    Label:
        id: name_label
        text: 'Circuit Name'
        font_size: '30sp'
        size_hint: 1, 0.1
    StackLayout:
        canvas.before:
            Color:
                rgba: 255, 255, 255, 0.15
            Rectangle:
                # self here refers to the widget i.e BoxLayout
                pos: self.pos
                size: self.size
        id: userlist_layout
        orientation: 'tb-lr'
        padding: 0, 20
        spacing: 0, 15
    BoxLayout:
        size_hint: 1, 0.2
        ToggleButton:
            text: 'Mute'
        ToggleButton:
            text: 'Deafen'

